/* EventFilter.css */

.event-filter-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rem;
  font-family: Arial, sans-serif;
}

.event-filter-form {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-bottom: 2rem;
}

.event-filter-form label {
  display: flex;
  flex-direction: column;
  font-weight: bold;
}

.event-filter-form input {
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
}

.event-filter-form button {
  padding: 0.5rem 1rem;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
}

.event-filter-form button:hover {
  background-color: #0056b3;
}

.event-filter-table {
  border-collapse: collapse;
  width: 100%;
}

.event-filter-table th,
.event-filter-table td {
  padding: 0.75rem;
  border: 1px solid #ccc;
  text-align: left;
}

.event-filter-table th {
  background-color: #f2f2f2;
  font-weight: bold;
}
